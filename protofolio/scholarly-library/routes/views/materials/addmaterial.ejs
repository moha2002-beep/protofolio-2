<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Material</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>

<body>
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Scholarly Library</a>
                <div class="navbar-nav">
                    <a class="nav-link" href="/search">Search</a>
                    <a class="nav-link" href="/about">About</a>
                </div>
            </div>
        </nav>

        <h1 class="mt-3 mb-4">Add a New Material</h1>
        <div class="card">
            <div class="card-body">
                <form action="/materialadded" method="POST">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title:</label>
                        <input type="text" id="title" name="title" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="author_id" class="form-label">Author:</label>
                        <select id="author_id" name="author_id" class="form-control" required>
                            <% authors.forEach(author=> { %>
                                <option value="<%= author.id %>">
                                    <%= author.name %>
                                </option>
                                <% }) %>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label">Price:</label>
                        <input type="number" id="price" name="price" class="form-control" step="0.01" required>
                    </div>
                    <div class="mb-3">
                        <label for="category_id" class="form-label">Category:</label>
                        <select id="category_id" name="category_id" class="form-control" required>
                            <% categories.forEach(category=> { %>
                                <option value="<%= category.id %>">
                                    <%= category.name %>
                                </option>
                                <% }) %>
                        </select>
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">Add Material</button>
                        <a class="btn btn-secondary" href="/materials">Back to Materials</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

</html>